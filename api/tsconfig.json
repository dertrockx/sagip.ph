{
  "compilerOptions": {
    "lib": [
      "es2017",
      "es2015.promise"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "@models": ["models/"],
      "@models/*": ["models/*"],
      "@decorators": ["decorators/"],
      "@util": ["util/"],
    }
  }
}

